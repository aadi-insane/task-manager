<div class="container my-4">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h1 class="h4 mb-0">Edit Profile</h1>
    </div>
    <div class="card-body">
      <%= form_with model: @user do |u| %>
        <div class="mb-3">
          <%= u.label :name, class: "form-label" %>
          <%= u.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= u.label :email, class: "form-label" %>
          <%= u.text_area :email, class: "form-control" %>
        </div>
        <%= u.submit "Update Profile", class: "btn btn-primary" %>
        <%= link_to "Cancel", root_path, class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</div>
