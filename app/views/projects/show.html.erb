<div class="container my-4">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h1 class="h4 mb-0">Project: <%= @project.name %></h1>
    </div>
    <div class="card-body">
      <h5 class="card-title">Project Details</h5>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <strong>Description:</strong>
          <span class="text-muted"><%= @project.description %></span>
        </li>
        <li class="list-group-item">
          <strong>Owner:</strong>
          <span class="text-muted"><%= @project.owner&.email || "Unknown" %></span>
        </li>
      </ul>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <%= link_to "Back to Projects", projects_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Edit Project", edit_project_path(@project), class: "btn btn-outline-primary" %>
      <%= link_to "Add a New Task", new_project_task_path(@project), class: "btn btn-success" %>
    </div>
  </div>

  

  <h3 class="mt-5">Related Tasks</h3>
  <% if @tasks.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover mt-3">
        <thead class="table-light">
          <tr>
            <th>Title</th>
            <th colspan="2">Assignee</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Due At</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= link_to task.title, project_task_path(@project, task) %></td>
              <td><%= task.assignee.name %></td>
              <td><%= task.assignee.email %></td>
              <td><%= task.status %></td>
              <td><%= task.priority %></td>
              <td><%= task.due_at.strftime('%d, %B %Y') %></td>
              <td class="text-end">
                <%= link_to "Edit", edit_project_task_path(@project, task), class: "btn btn-sm btn-outline-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="mt-3 text-muted">This project has no tasks yet.</p>
  <% end %>
</div>
