<h1>Task Manager</h1>

<% if user_signed_in? %>
  <p>Welcome, <%= current_user.email %>! (Role: <%= current_user.role.capitalize %>)</p>

  <nav aria-label="User navigation menu">
    <ul>
      <% if current_user.admin? %>
        <li><strong>Admin Menu:</strong></li>
        <li><%= link_to "Manage All Projects", projects_path %></li>
        <li><a href="#">Manage Users</a></li>
        <li><a href="#">System Settings</a></li>
      <% elsif current_user.manager? %>
        <li><strong>Manager Menu:</strong></li>
        <li><%= link_to "My Projects", projects_path %></li>
        <li><%= link_to "Create Project", new_project_path %></li>
        <li><a href="#">Team Reports</a></li>
      <% elsif current_user.member? %>
        <li><strong>Member Menu:</strong></li>
        <li><%= link_to "My Tasks", tasks_path %></li>
        <li><%= link_to "Projects", projects_path %></li>
      <% end %>
    </ul>
  </nav>

  <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete } %>
<% else %>
  <p>Welcome to Task Manager</p>
  <%= link_to "Sign in", new_user_session_path %>
  <%= link_to "Sign up", new_user_registration_path %>
<% end %>

