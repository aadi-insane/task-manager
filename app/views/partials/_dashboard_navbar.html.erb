<%# _dashboard_navbar.html.erb %>

<nav class="navbar navbar-expand-lg navbar-light bg-secondary">
  <div class="container-fluid">
    <%= link_to "Task Manager", root_path, class: "navbar-brand text-warning" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
          <% if current_user.admin? %>
            <li class="nav-item"><strong class="nav-link disabled text-dark ">Admin Menu:</strong></li>
            <li class="nav-item"><%= link_to "Manage All Projects", projects_path, class: "nav-link text-info" %></li>
            <li class="nav-item"><%= link_to "Manage Users", users_path, class: "nav-link text-info" %></li>
            <li class="nav-item"><%= link_to "Profile", edit_user_path(current_user), class: "nav-link text-info" %></li>
          <% elsif current_user.manager? %>
            <li class="nav-item"><strong class="nav-link disabled">Manager Menu:</strong></li>
            <li class="nav-item"><%= link_to "My Projects", projects_path, class: "nav-link text-info" %></li>
            <li class="nav-item"><%= link_to "Create Project", new_project_path, class: "nav-link text-info" %></li>
            <li class="nav-item"><%= link_to "Profile", edit_user_path(current_user), class: "nav-link text-info" %></li>
          <% elsif current_user.member? %>
            <li class="nav-item"><strong class="nav-link disabled">Member Menu:</strong></li>
            <li class="nav-item"><%= link_to "My Tasks", tasks_path, class: "nav-link text-info" %></li>
            <li class="nav-item"><%= link_to "Profile", edit_user_path(current_user), class: "nav-link text-info" %></li>
          <% end %>
        </ul>

        <span class="navbar-text me-3">
          Welcome, <%= current_user.name %>! (<%= current_user.role.capitalize %>)
        </span>

        <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "btn btn-outline-danger btn-sm text-light" %>
      <% else %>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item"><%= link_to "Sign in", new_user_session_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, class: "nav-link" %></li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>
